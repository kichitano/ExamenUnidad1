<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foto_reposteria"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.05"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/nombre_reposteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/foto_reposteria"
            android:layout_toEndOf="@+id/foto_reposteria"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcion_reposteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/foto_reposteria"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/nombre_reposteria"
            android:layout_toEndOf="@+id/foto_reposteria"
            android:gravity="center"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/descripcion_reposteria"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>